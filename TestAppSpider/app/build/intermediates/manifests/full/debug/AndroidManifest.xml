<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sylvius.testappspider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sylvius.testappspider.MainActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sylvius.testappspider.ServoActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.sylvius.testappspider.VideoViewActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.sylvius.testappspider.SlopeActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.sylvius.testappspider.ActivityLogActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.sylvius.testappspider.TabClass"
            android:launchMode="singleInstance" />
    </application>

</manifest>